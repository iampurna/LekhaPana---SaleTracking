@model LekhaPana.Models.Customer

@{
    ViewData["Title"] = "Activate Customer";
}

<div class="container mt-4">
    <h1>Activate Customer</h1>

    <div class="alert alert-success">
        <h3>Are you sure you want to Activate this customer?</h3>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text"><strong>Email:</strong> @Model.Email</p>
            <p class="card-text"><strong>Phone:</strong> @Model.Phone</p>
        </div>
    </div>

    <form asp-action="Activate" asp-route-id="@Model.CustomerId" method="post">
        <input type="hidden" asp-for="CustomerId" />
        <button type="submit" class="btn btn-success">Activate</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>